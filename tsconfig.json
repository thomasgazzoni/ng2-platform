{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "noEmitHelpers": false,
        "noImplicitAny": false,
        "declaration": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": ".",
        "outDir": "lib",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "bundles",
        "dist"
    ],
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": false
    }
}
