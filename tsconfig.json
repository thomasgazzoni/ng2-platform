{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "./lib"
    },
    "exclude": [
        "lib",
        "**/*-spec.ts",
        "node_modules"
    ],
    "files": [
        "src/declarations.d.ts",
        "index.ts",
        "ng2-platform.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": false
    }
}
