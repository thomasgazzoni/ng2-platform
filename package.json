{
    "name": "ng2-platform",
    "description": "Cross platforms (Browser, Mobile and Desktop) feature with Angular2, Ionic2 and Electron",
    "version": "1.0.1",
    "license": "MIT",
    "homepage": "https://github.com/thomasgazzoni/ng2-platform#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thomasgazzoni/ng2-platform.git"
    },
    "bugs": {
        "url": "https://github.com/thomasgazzoni/ng2-platform/issues"
    },
    "author": "Thomas Gazzoni <thomas.gazzoni@gmail.com>",
    "keywords": [
        "Electron",
        "Ionic2",
        "RxJs",
        "Angular2"
    ],
    "files": [
        "ng2",
        "angular2",
        "ionic2",
        "electron",
        "camera",
        "push",
        "location",
        "share",
        "storage",
        "upload"
    ],
    "main": "lib/platform.module.js",
    "typings": "lib/platform.module.d.ts",
    "scripts": {
        "clean": "rimraf node_modules && rimraf lib",
        "lint": "tslint --force --format verbose \"src/**/*.ts\"",
        "build": "npm run clean && npm install && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
        "test": "npm run build && mocha --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
        "watch": "npm run build -- --watch",
        "watch:test": "npm run test -- --watch"
    },
    "dependencies": {
        "@angular/common": "2.2.4",
        "@angular/compiler": "2.2.4",
        "@angular/core": "2.2.4",
        "@angular/http": "2.2.4",
        "@angular/platform-browser": "2.2.4",
        "core-js": "^2.4.1",
        "ionic-native": "2.2.3",
        "localforage": "1.4.3",
        "reflect-metadata": "^0.1.8",
        "rxjs": "5.0.0-beta.12",
        "zone.js": "^0.6.25"
    },
    "devDependencies": {
        "@types/electron": "1.4.29",
        "@types/service_worker_api": "0.0.6",
        "chai": "^3.5.0",
        "mocha": "^3.1.2",
        "rimraf": "^2.5.4",
        "ts-node": "^1.2.2",
        "tslint": "^4.0.2",
        "typescript": "2.0.3"
    },
    "engines": {
        "node": ">=4.0.0"
    }
}
